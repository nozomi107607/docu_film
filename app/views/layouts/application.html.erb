<!DOCTYPE html>
<html>
  <head>
    <title>CinemaReview</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-danger">
        <div class="container">
          <a class="navbar-brand text-light font-weight-bold" href="/"><i class="fas fa-film"></i> DocuFilm</a>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item active">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to 'マイページ', public_user_path(current_user.id), class: 'nav-link text-light' %>
              </li>
              <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", admin_users_path, class: 'nav-link text-light' %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to "初めての方へ", about_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
              <%= link_to "ゲストログイン（閲覧用）", guests_guest_sign_in_path, method: :post, class: 'nav-link text-light' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

     <footer>
      <div class="container mt-5">
        <div class="row">
         <div class="mx-auto">
           <p>Copyright © DocuFilm All Rights Reserved.</p>
         </div>
        </div>
      </div>
     </footer>
  </body>
</html>