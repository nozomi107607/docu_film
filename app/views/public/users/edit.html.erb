<div class="container px-5 px-sm-0">
 <div class="row m-3">
   <div class="col-3 md-3">
     <%= render 'public/films/list', user: @user, user: current_user %>
   </div>
   <div class="col-8 m-3">
    <h3 class="border-bottom">ユーザー登録情報変更</h3>
    <%= form_with model: @user, url: public_user_path(@user.id),method: :patch do |f| %>
     <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :user_name, class:"form-control" %><br />
     </div>
     <div class="form-group">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, class:"form-control", size: "10*10" %>
     </div>
     <div class="form-group">
      <%= f.submit "変更を保存", class:'btn btn-success' %>
     </div>
    <% end %>
   </div>
  </div>
</div>